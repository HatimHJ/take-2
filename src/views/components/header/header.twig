<div id="mainnav" class="main-nav-container shadow-default bg-[#2d2d2d] text-white">
      <div class="inner bg-inherit ">
          <div class="container p-4 border-b	">
              <div class="flex items-center justify-between relative ">
                    
                  {# Lang & Currency #}
                  <div class="header-buttons flex items-center gap-2">
                      {% if store.settings.is_multilingual or store.settings.currencies_enabled %}
                          <button type="button" onclick="salla.event.dispatch('localization::open')" class="btn--rounded-gray basis-0">
                              <span class="flag iti__flag iti__{{ user.language.country_code }} rounded-sm"></span>
                              <span class="mx-1.5">|</span> <span>{{ currency.symbol }}</span>
                          </button>
                          <salla-localization-modal></salla-localization-modal>
                      {% endif %}
                      <a class="lg:hidden mburger mburger--collapse leading-none rtl:ml-4 ltr:mr-4" href="#mobile-menu" aria-label="Open-menu">
                        <i class="sicon-menu text-white  text-2xl"></i>
                      </a>
                  </div>
                  {# LOGO #}
                  <div class="flex items-center">
                     
                      <a class="navbar-brand rounded-xl" href="{{ store.url }}">
                          <img class="rounded-xl" fetchpriority="high" width="100%" height="100%" loading="eager" src="{{ store.logo }}" alt="{{ store.name }} logo">
                          {% if is_page('index') %}
                            <h1 class="sr-only">{{ store.name }}</h1>
                          {% else %}
                            <h2 class="sr-only">{{ store.name }}</h2>
                          {% endif %}
                      </a>
                  </div>

                  {# USER & CART #}
                  <div class="flex items-center justify-end text-white">
                      {% if user.type=='user' %}
                        <salla-user-menu avatar-only show-header></salla-user-menu>
                      {% else %}
                          <button class="header-btn" aria-label="user-icon" onclick="salla.event.dispatch('login::open')">
                            <i class="header-btn__icon sicon-user-circle"></i>
                          </button>
                      {% endif %}
                      <salla-cart-summary class="ml-4 rtl:ml-[unset] rtl:mr-4">
                        <i slot="icon" class="header-btn__icon icon sicon-shopping-bag"></i>
                      </salla-cart-summary>
                  </div>



              </div>
          </div>
          {# Menu #}
          <div class="container ">
              <div class="flex items-center justify-center relative">
                    <div class="flex items-center ">
                      <style>.main-menu > li > a[href*=offer]{color:#fff} @media (max-width:1024px){.main-menu > li > a[href*=offer]{color:#111}}</style>
                      <custom-main-menu></custom-main-menu>
                    </div>
              </div>
          </div>
      </div>
  </div>