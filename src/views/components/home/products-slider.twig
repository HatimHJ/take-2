{#
| Variable        | Type      | Description                                                      |
|-----------------|-----------|------------------------------------------------------------------|
| products        | Product[] | List of products                                                 |
| title           | string    | Section title                                                    |
| display_all_url | ?string   | If it's existed, mean should show load more link to this url     |
| position        | Int       | Sorting number start from zero                                   |
#}
<style>

  .custom-product-slider{
    padding:20px ;
  }
  .s-product-card-vertical{
        /*flex-direction: column-reverse;*/
      border: 1px dashed #e1e1e1;
      border-radius: 0;
  }

  .s-product-card-vertical .s-product-card-image{
        border-top-left-radius: 0;
      border-top-right-radius: 0;
      flex-basis:15rem;
  }
  .s-product-card-content-main {
    order:2
  }
  .s-product-card-content-sub  {
    order:1
  }
  .s-product-card-content-footer  {
    order:3
  }
  .s-product-card-sale-price h4{
    font-size:1.2rem
  }
  .s-product-card-content-title a{
    font-size:1rem

  }
</style>
<section id="best-offers-{{ position }}-slider" 
          class="custom-product-slider  s-block s-block--best-offers container overflow-hidden">
  {% if products|length %}
    <salla-products-slider
            source="selected"
            limit="{{ limit }}"
            product-card-component="my-custom-product-card"
            full-image="false"
            autoplay
            source-value="[{{ products|map((product) => product.id)|join(',') }}]"
            display-all-url="{{display_all_url}}"
            block-title="{{ title }}"
            block-subTitle="{{ sub_title|raw }}"
            slider-id="slider-with-bg-{{ position }}"
    ></salla-products-slider>
  {% endif %}
</section>
