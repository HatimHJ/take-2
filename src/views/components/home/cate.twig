<style>
.slider {
  display: grid;
  grid-template-columns: repeat(4, 1fr); /* أربعة أعمدة */
  grid-gap: 20px; /* المسافة بين العناصر */
}

.swiper-slide-inner {
  position: relative;
  background-color: #f5f5f5;
  border-radius: 8px;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  height: 200px;
}
.large {
  grid-column: span 2; /* يمتد على عمودين */
  height: 400px; /* ارتفاع أكبر */
}

/* كروت صغيرة افتراضية */
.small {
  height: 200px; /* ارتفاع أصغر */
}

</style>
<script>
// الحصول على العنصر الرئيسي للسلايدر
const slider = document.querySelector('.slider');

// إضافة البيانات الديناميكية (هنا يتم جلب العناصر مثلاً)
const slides = document.querySelectorAll('div.swiper-slide-inner');

// إعداد الأحجام بناءً على ترتيب العناصر
slides.forEach((slide, index) => {
  // لكل عنصر بناءً على ترتيبه، يتم تعديل الكلاس الخاص به
  if ((index + 1) % 3 === 1) {
    slide.classList.add('large');
  } else {
    slide.classList.add('small');
  }
});
</script>
